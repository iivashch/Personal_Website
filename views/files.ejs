<%- include('partials/header', { title: 'File Manager' }) %>

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>File Exchange</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container py-5">
    <h1 class="mb-4">üìÅ File Exchange</h1>
    <form action="/files/upload" method="POST" enctype="multipart/form-data" class="mb-4">
      <input type="file" name="file" required class="form-control mb-2">
      <input type="text" name="filename" placeholder="Optional: Rename file" class="form-control mb-2">
      <button type="submit" class="btn btn-primary">Upload</button>
    </form>
    

    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Filename</th>
          <th>Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% files.forEach(file => { %>
          <tr>
            <td><%= file.filename %></td>
            <td><%= file.contentType %></td>
            <td>
              <a href="/files/download/<%= file._id %>" class="btn btn-sm btn-success">Download</a>
              <% if (file.contentType.startsWith('image/') || file.contentType === 'application/pdf') { %>
                <a href="/files/preview/<%= file._id %>" target="_blank" class="btn btn-sm btn-info">Preview</a>
              <% } %>
              <% if (isAdmin) { %>
                <form action="/files/delete/<%= file._id %>" method="POST" style="display:inline;">
                  <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this file?')">Delete</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
    
  </div>
</body>
</html>


<%- include('partials/footer') %>
