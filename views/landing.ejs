<script>
  document.addEventListener('DOMContentLoaded', function() {
    var content = document.querySelector('.markdown-content');
    if (content) {
      renderMathInElement(content, {
        delimiters: [
          { left: '$$', right: '$$', display: true },
          { left: '\\[', right: '\\]', display: true },
          { left: '$',  right: '$',  display: false },
          { left: '\\(', right: '\\)', display: false }
