<!-- Hide/UnHide Password when registering and logging in-->
<script>
  document.getElementById('togglePassword').addEventListener('click', function () {
    const passwordInput = document.getElementById('password');
    const icon = document.getElementById('toggleIcon');

    const isHidden = passwordInput.type === 'password';
    passwordInput.type = isHidden ? 'text' : 'password';

    // Update icon class
    icon.classList.toggle('bi-eye-fill', !isHidden);   // show open eye if hidden
    icon.classList.toggle('bi-eye-slash-fill', isHidden); // show slashed eye if visible
  });
</script>

<!-- Validate the password to make sure it is strong -->
<script>
  const passwordInput = document.getElementById('password');

  // Live icon feedback
  passwordInput.addEventListener('input', function () {
    const value = passwordInput.value;

    const tests = {
      length: value.length >= 8,
      uppercase: /[A-Z]/.test(value),
      lowercase: /[a-z]/.test(value),
      number: /[0-9]/.test(value),
      special: /[!@#$%^&*(),.?":{}|<>]/.test(value)
    };

    for (const [key, passed] of Object.entries(tests)) {
      const icon = document.getElementById(`${key}Icon`);
      icon.className = `bi me-1 ${passed ? 'bi-check-square-fill text-success' : 'bi-x-square-fill text-danger'}`;
    }
  });

  // Block form submission if password is weak
  document.querySelector('form').addEventListener('submit', function (e) {
    const value = passwordInput.value;
    const valid = value.length >= 8 &&
                  /[A-Z]/.test(value) &&
                  /[a-z]/.test(value) &&
                  /[0-9]/.test(value) &&
                  /[!@#$%^&*(),.?":{}|<>]/.test(value);

    if (!valid) {
      e.preventDefault();
      alert("Please choose a stronger password that meets all criteria.");
    }
  });
</script>


