  }

  .tripic-frame {
    width: 100%;
    aspect-ratio: 16 / 10;
    overflow: hidden;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(0,0,0,0.1);
    background-color: #f8f9fa;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .tripic-img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s ease;
  }

  .tripic-img:hover {
    transform: scale(1.03);
  }

  @media (max-width: 768px) {
    .tripic-frame {
      aspect-ratio: 16 / 10;
    }
  }
</style>


