<%- include('partials/header', { title: 'Dashboard', user }) %>
<style>
  .section-nav {
    position: fixed;
    top: 80px;
    left: 0;
    width: 240px;
    height: calc(100vh - 80px);
    overflow-y: auto;
    padding: 1.5rem 1rem;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  }
  .section-nav .nav-link {
    display: block;
    color: #333;
    padding: 0.5rem 1rem;
    font-size: 15px;
    font-weight: 500;
    border-radius: 0.375rem;
    margin-bottom: 4px;
    transition: background-color 0.2s;
  }
  .section-nav .nav-link:hover {
    background-color: #f1f1f1;
    color: #000;
    text-decoration: none;
  }
  .section-content {
    margin-left: 260px;
  }
  .full-report-container {
    overflow-x: auto;
    margin-top: 1rem;
  }
  .full-report-container table {
    width: 100%;
    font-size: 0.875rem;
  }
  @media (max-width: 768px) {
  .section-nav {
    display: none !important;
  }

  .section-content {
    margin-left: 0;
    padding: 1rem;
  }

  #sidebarToggle {
    display: none;
  }
}

</style>

<div class="container-fluid">
  <nav class="section-nav">
    <h4 class="mb-3 text-center">Sections</h4>
    <div class="nav flex-column">
      <a class="nav-link" href="#navbarMain">To the Top</a>
      <a class="nav-link" href="#headline">Headline</a>
      <div id="dynamic-sidebar-links"></div>
    </div>
  </nav>

  <div class="section-content">
    <h1 class="mb-4">ðŸ“Š Daily Economic Dashboard</h1>
    <p class="text-muted mt-2 mb-4" id="last-updated">Last updated: loading...</p>

    <section id="headline">
      <h4>Headline Indicators</h4>
      <div id="headline-indicators" class="mb-4">
        <ul id="headline-list" class="list-group"></ul>
      </div>
    </section>

    <section id="dynamic-metrics-container"></section>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/dashboard.js"></script>
