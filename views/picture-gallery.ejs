<%- include('partials/header', {title: 'Picture Gallery'}) %>

  <title>A glimpse into my photo gallery</title>
  <style>
    /* Full-page gallery styling */
    body {
      margin: 0;
      padding: 0;
      font-family: sans-serif;
      background: #f8f9fa;
    }
    .gallery-header {
      text-align: center;
      padding: 2rem 1rem;
      background: #343a40;
      color: #fff;
      margin: 0;
    }
    .gallery-container {
      /* Masonry-style columns for mixed orientation */
      column-gap: 1rem;
      padding: 1rem;
      max-width: 1400px;
      margin: 0 auto;
    }
    /* Responsive column counts */
    @media (min-width: 1200px) {
      .gallery-container { column-count: 4; }
    }
    @media (min-width: 768px) and (max-width: 1199px) {
      .gallery-container { column-count: 3; }
    }
    @media (min-width: 576px) and (max-width: 767px) {
      .gallery-container { column-count: 2; }
    }
    @media (max-width: 575px) {
      .gallery-container { column-count: 1; }
    }
    .gallery-item {
      /* Prevent column breaks inside an item */
      break-inside: avoid;
      margin-bottom: 1rem;
      position: relative;
      overflow: hidden;
      cursor: pointer;
    }
    .gallery-item img {
      width: 100%;
      height: auto;
      display: block;
      transition: transform 0.3s ease;
      border-radius: 4px;
    }
    .gallery-item:hover img {
      transform: scale(1.05);
    }
    .gallery-caption {
      position: absolute;
      bottom: 0;
      width: 100%;
      background: rgba(0, 0, 0, 0.6);
      color: #fff;
      text-align: center;
      padding: 0.5rem;
      font-size: 0.9rem;
      opacity: 0;
      transition: opacity 0.3s ease;
      border-bottom-left-radius: 4px;
      border-bottom-right-radius: 4px;
    }
    .gallery-item:hover .gallery-caption {
      opacity: 1;
    }
  </style>

  <h1 class="gallery-header">A glimpse into my photo gallery</h1>
  <div class="gallery-container">
    <% for (let i = 1; i <= 18; i++) { %>
      <div class="gallery-item">
        <a href="/data/<%= i %>.jpeg" target="_blank" rel="noopener">
          <img src="/data/<%= i %>.jpeg" alt="Image <%= i %>">
        </a>
      </div>
    <% } %>
  </div>

<%- include('partials/footer') %>

